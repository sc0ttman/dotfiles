# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# rails
alias migrate="bundle exec rake db:migrate db:test:prepare"
alias be="bundle exec "
alias sk="bundle exec sidekiq -q high -q default -q low"
alias es="elasticsearch -f -D es.config=/usr/local/opt/elasticsearch/config/elasticsearch.yml"
alias rs="redis-server"
alias loc='wc -l $(find . -name *.rb) | sort'

# Pow
alias al="tail -f log/development.log"
alias restart="touch tmp/restart.txt"

# ssh!
# alias shh='ssh aurgasm@aurgasm.us'
# alias shhve='ssh paul@javascriptbattle.com'

# programs
alias slt='open -a "Sublime Text 2"'
